{
  "JwtSettings": {
    "Secret": "SUPER_SECRET_KEY_1234567890",
    "Issuer": "UserService",
    "Audience": "UserServiceUsers",
    "ExpirationMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "userService",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "currencyRoute": {
        "ClusterId": "financeService",
        "Match": {
          "Path": "/finance/{**catch-all}"
        },
        "Transforms": [
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "Clusters": {
      "userService": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5001/" }
        }
      },
      "financeService": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5002/" }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
